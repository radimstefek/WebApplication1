<script>
	(function() {
		const text = "BANÍK PIČO!!!";
		const typingSpeed = 150;      // rychlost psaní v ms
		const deletionSpeed = 100;    // rychlost mazání v ms
		const pauseDelay = 2000;      // pauza po dokončení psaní před mazáním
		const element = document.getElementById("typewriter");
      
		let index = 0;
		let isDeleting = false;
      
		function typeEffect() {
			if (!isDeleting) {
				// Psaní
				element.textContent = text.substring(0, index + 1);
				index++;
				if (index === text.length) {
					// Po dokončení psaní počkej, poté začni mazat
					setTimeout(() => {
						isDeleting = true;
						typeEffect();
					}, pauseDelay);
				} else {
					setTimeout(typeEffect, typingSpeed);
				}
			} else {
				// Mazání
				element.textContent = text.substring(0, index - 1);
				index--;
				if (index === 0) {
					// Po dokončení mazání restartuj psaní
					isDeleting = false;
					setTimeout(typeEffect, typingSpeed);
				} else {
					setTimeout(typeEffect, deletionSpeed);
				}
			}
		}
      
		// Spusť efekt
		typeEffect();
	})();
</script>

<script>
    (function() {
      // Testovací data pro 3 turnaje
      const tournaments = [
        {
          team1: "Team Alpha",
          team2: "Team Beta",
          start: new Date(new Date().getTime() - 30 * 60000), // začal před 30 minutami
          end: new Date(new Date().getTime() + 30 * 60000)    // skončí za 30 minut
        },
        {
          team1: "Team Gamma",
          team2: "Team Delta",
          start: new Date(new Date().getTime() + 60 * 60000), // začne za 60 minut
          end: new Date(new Date().getTime() + 120 * 60000)   // skončí za 120 minut
        },
        {
          team1: "Team Epsilon",
          team2: "Team Zeta",
          start: new Date(new Date().getTime() + 180 * 60000), // začne za 180 minut
          end: new Date(new Date().getTime() + 240 * 60000)    // skončí za 240 minut
        }
      ];

      // Pomocná funkce pro formátování data a času ve formátu "dd.mm.yyyy hh:mm"
      function formatDateTime(date) {
        const pad = num => num.toString().padStart(2, '0');
        return `${pad(date.getDate())}.${pad(date.getMonth() + 1)}.${date.getFullYear()} ${pad(date.getHours())}:${pad(date.getMinutes())}`;
      }

      function updateTournamentCards() {
        const now = new Date();
        const grid = document.querySelector('.tournament-status .ts-grid');
        grid.innerHTML = ''; // Vymažeme předchozí obsah

        tournaments.forEach(t => {
          // Vytvoříme kartu pro daný turnaj
          const card = document.createElement('div');
          card.className = 'ts-card';

          // Týmové názvy
          const teamsDiv = document.createElement('div');
          teamsDiv.className = 'ts-teams';
          teamsDiv.textContent = `${t.team1} vs ${t.team2}`;

          // Datum a čas
          const datetimeDiv = document.createElement('div');
          datetimeDiv.className = 'ts-datetime';
          datetimeDiv.textContent = `Od ${formatDateTime(t.start)} do ${formatDateTime(t.end)}`;

          // Status s LED indikátorem
          const statusDiv = document.createElement('div');
          statusDiv.className = 'ts-status';
          const led = document.createElement('span');
          led.className = 'led';
          let statusText = '';
          if (now >= t.start && now <= t.end) {
            led.classList.add('online');
            statusText = 'Probíhá';
          } else if (now < t.start) {
            led.classList.add('offline');
            statusText = `Začíná v ${formatDateTime(t.start)}`;
          } else {
            led.classList.add('offline');
            statusText = 'Skončil';
          }
          statusDiv.appendChild(led);
          const textSpan = document.createElement('span');
          textSpan.textContent = statusText;
          statusDiv.appendChild(textSpan);

          // Sestavíme kartu
          card.appendChild(teamsDiv);
          card.appendChild(datetimeDiv);
          card.appendChild(statusDiv);

          // Přidáme kartu do gridu
          grid.appendChild(card);
        });
      }

      updateTournamentCards();
      // Aktualizace každou minutu
      setInterval(updateTournamentCards, 60000);
    })();
</script>